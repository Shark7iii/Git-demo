<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_book_item_book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/book_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightSkyBlue"

        android:padding="15dp">

        <TextView
            android:id="@+id/search_book_item_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/book_name_1"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/search_book_item_book_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_book_item_book_name"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/writer"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/search_book_item_book_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_book_item_book_writer"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/book_name_1"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/search_book_item_book_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_book_item_book_kind"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/writer"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </RelativeLayout>

</LinearLayout>