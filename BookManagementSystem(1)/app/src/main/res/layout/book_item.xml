<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/book_item_book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/book_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightSkyBlue"
        android:padding="5dp">

        <TextView
            android:id="@+id/book_item_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/book_name_1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/book_item_book_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_item_book_name"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="@string/writer"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>